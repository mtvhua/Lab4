{
  "name": "module1-country-explorer",
  "version": "1.0.0",
  "description": "Explorador de países - Fundamentos de desarrollo web con TypeScript vanilla",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css}\""
  },
  "keywords": ["typescript", "vanilla", "countries", "educational"],
  "author": "Adrián Catalán",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/vite": "4.1.8",
    "@types/node": "22.12.0",
    "eslint": "9.17.0",
    "prettier": "3.4.2",
    "tailwindcss": "4.1.8",
    "typescript": "5.9.3",
    "typescript-eslint": "8.18.2",
    "vite": "7.3.0"
  }
}
